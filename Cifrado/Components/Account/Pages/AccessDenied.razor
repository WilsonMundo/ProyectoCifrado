@page "/Account/AccessDenied"
@inject NavigationManager Navigation

<PageTitle>Access denied</PageTitle>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-body p-5">
                    <h1 class="text-danger display-4">⛔ Acceso Denegado</h1>
                    <p class="lead mt-3">
                        Lo sentimos, pero <strong>no tienes permiso</strong> para acceder a esta página.
                    </p>
                    <p class="text-muted">
                        ¡Únete ahora para proteger y gestionar tus textos cifrados de manera segura!
                    </p>


                    <div class="mt-4 mb-4">
                        <i class="fas fa-lock text-danger fa-5x"></i>
                    </div>


                    <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-3">

                        <a href="Account/Login" class="btn btn-success btn-lg me-3"> 🔐 Iniciar Sesión</a>



                        <a href="Account/Register" class="btn btn-primary btn-lg">  📝 Crear una Cuenta</a>
                    </div>

                    <hr class="my-4" />

                    <p class="text-muted">
                        ¿No estás seguro? Siempre puedes regresar al <a href="/" class="text-primary">Inicio</a>.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private void GoToLogin()
    {
        Navigation.NavigateTo("/Account/Login", forceLoad: true);
    }

    private void GoToRegister()
    {
        Navigation.NavigateTo("/Account/Register", forceLoad: true);
    }
}