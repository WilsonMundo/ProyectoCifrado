@page "/"
@inject NavigationManager Navigation
<PageTitle>Home</PageTitle>
<div class="container mt-5 text-center">
<AuthorizeView>
    <Authorized>
            <h1 class="mb-4">👋 ¡Bienvenido, <span class="text-primary">@context.User.Identity.Name!</span></h1>
            <p class="lead">
                Estás listo para <strong class="text-success">cifrar</strong> o <strong class="text-danger">descifrar</strong> tus datos.
            </p>

            <div class="row mt-5">
              
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h4 class="card-title">🔒 Cifrar Texto</h4>
                            <p class="card-text">Protege tu información al convertirla en un texto encriptado.</p>
                            <button class="btn btn-success btn-lg" @onclick="GoToCifrado">🔐 Ir a Cifrado</button>
                        </div>
                    </div>
                </div>

             
                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h4 class="card-title">🔓 Descifrar Texto</h4>
                            <p class="card-text">Restaura el texto original usando la clave correcta.</p>
                            <button class="btn btn-primary btn-lg" @onclick="GoToDescifrado">🔓 Ir a Descifrado</button>
                        </div>
                    </div>
                </div>
            </div>
    </Authorized>
    <NotAuthorized>
            <h1 class="mb-4">🔐 Bienvenido a <span class="text-primary">Encriptador Seguro</span></h1>
            <p class="lead">
                Protege tus textos de manera segura con <strong>encriptación avanzada</strong>.
                Aquí puedes <strong class="text-success">cifrar</strong> y <strong class="text-danger">descifrar</strong> fácilmente.
            </p>

            <div class="row mt-5">

                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h4 class="card-title">🔒 Cifrar Texto</h4>
                            <p class="card-text">Protege tu información al convertirla en un texto encriptado.</p>
                            <button class="btn btn-success btn-lg" @onclick="GoToCifrado">🔐 Ir a Cifrado</button>
                        </div>
                    </div>
                </div>


                <div class="col-md-6 mb-4">
                    <div class="card shadow-lg border-0 rounded-lg">
                        <div class="card-body">
                            <h4 class="card-title">🔓 Descifrar Texto</h4>
                            <p class="card-text">Restaura el texto original usando la clave correcta.</p>
                            <button class="btn btn-primary btn-lg" @onclick="GoToDescifrado">🔓 Ir a Descifrado</button>
                        </div>
                    </div>
                </div>
            </div>


            <div class="mt-5">
                <h3>🎯 ¿Por qué usar Encriptador Seguro?</h3>
                <div class="row mt-4">
                    <div class="col-md-4">
                        <div class="card border-0">
                            <div class="card-body">
                                <h5 class="card-title">🔐 Seguridad Garantizada</h5>
                                <p class="card-text">Utilizamos algoritmos de cifrado avanzados para mantener tu información segura.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0">
                            <div class="card-body">
                                <h5 class="card-title">⚡ Rápido y Eficiente</h5>
                                <p class="card-text">Cifra y descifra textos en cuestión de segundos.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card border-0">
                            <div class="card-body">
                                <h5 class="card-title">🧩 Fácil de Usar</h5>
                                <p class="card-text">Interfaz intuitiva y amigable para todos los usuarios.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


    </NotAuthorized>
</AuthorizeView>

   
    <footer class="mt-5 text-muted">
        <p>&copy; 2025 Encriptador Seguro | Todos los derechos reservados.</p>
    </footer>
</div>

@code {
    private void GoToCifrado()
    {
        Navigation.NavigateTo("/Account/cifrado-text", forceLoad: true);
    }

    private void GoToDescifrado()
    {
        Navigation.NavigateTo("/Account/decifra-text", forceLoad: true);
    }
}